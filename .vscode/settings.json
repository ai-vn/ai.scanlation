{
    "javascript.validate.enable": false,
    "javascript.format.enable": false,

    "files.exclude": {
        "**/.cache": true,
        "**/.certificate": true,
        "**/.dependabot": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.nuxt": true,
        "**/.nyc_output": true,
        "**/.svn": true,
        "**/.vscode": true,
        "**/coverage": true,
        "**/CVS": true,
        "**/dist": true,
        "**/junit.xml": true,
        "**/node_modules": true,
        "**/yarn-error.log": true
    },
    "files.eol": "\r\n",
    "files.watcherExclude": {
        "**/app.asar": true,
        "**/electron.asar": true,
        "**/dist/**": true
    },

    "vetur.validation.template": false,
    "vetur.format.defaultFormatter.scss": "prettier",
    "vetur.format.defaultFormatter.css": "prettier",
    "vetur.format.defaultFormatter.js": "prettier",

    "prettier.disableLanguages": [],

    "eslint.options": {
        "extensions": [".html", ".vue", ".js", ".jsx", ".ts", ".tsx"]
    },
    "eslint.validate": ["javascript", "html", "vue", "typescript"],

    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.detectIndentation": false,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },

    "vsicons.associations.files": [
        {
            "filename": true,
            "icon": "electron",
            "extensions": [],
            "filenamesGlob": ["electron-webpack", "electron-builder"],
            "extensionsGlob": ["json", "yml"],
            "format": "svg"
        },
        {
            "icon": "testts",
            "extensions": ["node.ts", "nuxt.ts", "web.ts", "main.ts"],
            "format": "svg"
        }
    ],
    "vsicons.associations.folders": [
        {
            "icon": "typings",
            "extensions": ["types"],
            "format": "svg"
        }
    ]
}
